{
    "compilerOptions": {
        "module": "CommonJS",
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "target": "es5",
        "baseUrl": "./",
        "paths": {
            "animations/*": ["src/animations/*"],
            "assets/*": ["src/assets/*"],
            "scenes/*": ["src/scenes/*"],
            "sprites/*": ["src/sprites/*"],
            "helpers/*": ["src/helpers/*"],
            "managers/*": ["src/managers/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "src/**/*/spec.ts", "dist"]
}